@model EatAndDrink.Controllers.ClientController.ClientCreateViewModel

@{
	ViewData["Title"] = "New Client";
}

<form asp-controller="Client" asp-action="Create" asp-method="post">
    <div class="mb-3">
        <Label asp-for="FirstName" class="form-label">First Name</Label>
        <input asp-for="FirstName" class="form-control"/>
        <div class="form-text">Enter your first name</div>
    </div>
    <div class="mb-3">
        <Label asp-for="LastName" class="form-label">Last Name</Label>
        <input asp-for="LastName" class="form-control" />
        <div class="form-text">Enter your last name</div>
    </div>
    <div class="mb-3">
        <Label asp-for="PhoneNumber" class="form-label">Phone Number</Label>
        <input asp-for="PhoneNumber" class="form-control" />
        <div class="form-text">Enter your phone number in international format</div>
    </div>
    <div class="mb-3">
        <Label asp-for="Address" class="form-label">Address</Label>
        <input asp-for="Address" class="form-control" />
        <div class="form-text">Enter your home address</div>
    </div>
    <button type="submit" class="btn btn-secondary">Create</button>
</form>

