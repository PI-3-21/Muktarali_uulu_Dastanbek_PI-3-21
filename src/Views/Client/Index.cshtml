@model IEnumerable<EatAndDrink.Models.Client>
@{
ViewData["Title"] = "Clients Page";
}
<style>
  a {
        text-decoration: none;
  }
</style>
<h1>Hello there! Это страница Clients.</h1>

<button type="button" class="btn btn-outline-primary"> <a asp-controller="Client" asp-action="New">Create new client</a>  </button>
<br /><br />
<table class="table table-striped">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Phone Number</th>
        <th>Address</th>
        <th colspan ="2">Action</th> 
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Address</td>
             <td> <button><a asp-controller="Client" asp-action="Edit" asp-route-id="@item.Id"> <font color="black"> <b>Edit</b>  </font></a></button></td>
            <td> <button><a asp-controller="Client" asp-action="Delete" asp-route-id="@item.Id"> <font color="black"> <b>Delete</b></font></a></button></td>
        </tr>
    }
</table>
<hr />
